---
import Layout from '@layouts/Layout.astro';
import BlogSubHeader from '@components/blog/BlogSubHeader.astro';
import * as blogSubHeaderPost from '@content/blogPage/en/blogSubheader.md';
import { getLangFromUrl, useTranslations } from '@i18n/utils';


const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

---

<Layout 
	title={t('html.title')}
	description={t('html.description')}
	pageTitle={t('html.title')}
	locale={lang}
	>
	<BlogSubHeader data={blogSubHeaderPost} />
</Layout>

