---
import "@styles/global.css";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import BaseHead from "@components/BaseHead.astro";

// TYPES
interface Props {
	title: string;
	description: string;
	pageTitle?: string;
	ogImage?: string;
	locale: string;
}

// FUNCTIONS & ACTIONS
// Get props, incl. locale
const { title, description, pageTitle, ogImage, locale } = Astro.props;
---

<!doctype html>
<html lang={locale}>
	<head>
		<BaseHead 
			title={title} 
			description={description} 
			pageTitle={pageTitle} 
			ogImage={ogImage} 
			locale={locale} />
	</head>
	<body>
		<Header lang={locale} />
		<slot />
		<Footer lang={locale} />
	</body>
</html>

<style lang="scss">
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
