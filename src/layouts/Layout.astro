---
import "@styles/global.css";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import BaseHead from "@components/BaseHead.astro";

// TYPES
interface Props {
	title: string;
	description: string;
	pageTitle?: string;
	ogImage?: string;
	locale: string;
	mainClass?: string[];
}

// FUNCTIONS & ACTIONS
// Get props, incl. locale
const { title, description, pageTitle, ogImage, locale, mainClass } = Astro.props;
---

<!doctype html>
<html lang={locale}>
	<head>
		<BaseHead 
			title={title} 
			description={description} 
			pageTitle={pageTitle} 
			ogImage={ogImage} 
			locale={locale} />
	</head>
	<body>
		<Header lang={locale} />
		<main class:list={mainClass}>
			{/* Main content */}
			<slot />
		</main>
		<Footer lang={locale} />
	</body>
</html>