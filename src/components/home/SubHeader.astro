---
import astroLogo from '../../assets/astro.svg';
import background from '../../assets/background.svg';
import * as subHeaderPost from '../../content/home/subheader.md';
import Content from '../../content/home/subheader.md';
---

<div id="subheader">
    <div class="flex flex-col gap-4 items-center justify-center z-10 text-center container">
        <small class="top-title">{subHeaderPost.frontmatter.topTitle}</small>
        <h1 class="title">{subHeaderPost.frontmatter.name},</h1>
        <h2 class="subtitle">{subHeaderPost.frontmatter.subtitle}</h2>
        <div class="text-3xl leading-12">
            <Content />
        </div>
    </div>
</div>

<style lang="scss">

    #subheader {
        position: relative;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        background: url("../../assets/bg.png") lightgray 50% / cover no-repeat;

        &:after {
            content: "";
            position: absolute;
            background: linear-gradient(180deg, rgba(175, 155, 195, 1) 0.01%, #FFF 100%);
            opacity: 0.85;
            background-blend-mode: overlay;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0;
        }

      small.top-title {
        font-size: 1.67rem;
        z-index: 1;
        font-weight: 800;
      }

      h1.title {
        font-size: 6rem;
        z-index: 1;
        font-weight: 900;
        line-height: 6rem;
      }

      h2.subtitle {
        font-size: 4rem;
        z-index: 1;
        font-weight: 700;
      }
    }
</style>
