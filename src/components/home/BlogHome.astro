---
import BlogCard from '../shared/blog/BlogCard.astro';
import Title from '../shared/title/Title.astro';

interface Props {
    data: MD;
}

const {
    data
} = Astro.props;

const {
    blog,
} = data.frontmatter;

const Content = data.Content;


---
<div id="blog-home" class="pb-40 overflow-x-hidden">
    <div class="container flex flex-col gap-4">
        <Title text={blog} tag="h2" />
        <div class="cms">
            <Content />
        </div>
    </div>
    <div class="container relative h-[320px] mt-8">
        <div class="blog-container flex gap-8">
            <BlogCard 
                title="How to create a blog with Astro"
                excerpt="Astro is a new static site generator that is fast and easy to use. In this article, we will see how to create a blog with Astro."
                source="Axopen"
                url="https://axopen.com/blog/how-to-create-a-blog-with-astro" />
