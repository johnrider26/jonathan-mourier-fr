# Enable rewrite engine
RewriteEngine On

# Block access to sensitive files
<FilesMatch "^\.env|\.git|\.htaccess|\.ini|\.log|\.yaml|\.yml$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block access to all hidden files and directories
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>